{% extends "base.html.jinja" %}

{% block page_title %}Page Not Found | Zestify{% endblock %}

{% block extra_styles %}
<style>
    .error-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: var(--spacing-lg);
    }

    .error-container {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-lg);
        padding: var(--spacing-xxl);
        width: 100%;
        max-width: 36rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .error-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--danger), #ff6b6b, var(--accent-orange));
    }

    .error-icon {
        font-size: 5rem;
        margin-bottom: var(--spacing-lg);
        opacity: 0.8;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .error-title {
        color: var(--text-primary);
        font-size: var(--font-size-xxl);
        font-weight: 700;
        margin-bottom: var(--spacing-sm);
        letter-spacing: -0.025em;
    }

    .error-code {
        color: var(--danger);
        font-size: var(--font-size-lg);
        font-weight: 600;
        margin-bottom: var(--spacing-lg);
        opacity: 0.8;
    }

    .error-message {
        color: var(--text-secondary);
        font-size: var(--font-size-base);
        line-height: 1.6;
        margin-bottom: var(--spacing-xl);
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .error-actions {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
        align-items: center;
    }

    .error-btn {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-xs);
        background: linear-gradient(135deg, var(--accent-blue), #4c94ff);
        color: var(--text-primary);
        text-decoration: none;
        border-radius: var(--border-radius-sm);
        padding: var(--spacing-md) var(--spacing-lg);
        font-size: var(--font-size-md);
        font-weight: 600;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        min-width: 180px;
        justify-content: center;
    }

    .error-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .error-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(88, 166, 255, 0.3);
    }

    .error-btn:hover::before {
        left: 100%;
    }

    .error-btn:active {
        transform: translateY(0);
    }

    .error-btn.secondary {
        background: var(--surface-bg);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }

    .error-btn.secondary:hover {
        background: var(--elevated-bg);
        color: var(--text-primary);
        border-color: var(--accent-blue);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .error-suggestions {
        margin-top: var(--spacing-xl);
        padding-top: var(--spacing-lg);
        border-top: 1px solid var(--border-color);
    }

    .suggestions-title {
        color: var(--text-primary);
        font-size: var(--font-size-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-md);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .suggestions-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-sm);
        justify-content: center;
    }

    .suggestion-link {
        color: var(--accent-blue);
        text-decoration: none;
        font-size: var(--font-size-sm);
        padding: var(--spacing-xs) var(--spacing-sm);
        border-radius: var(--border-radius-sm);
        transition: var(--transition);
        border: 1px solid transparent;
    }

    .suggestion-link:hover {
        background: var(--accent-blue);
        color: var(--text-primary);
        border-color: var(--accent-blue);
    }

    @media (max-width: 768px) {
        .error-wrapper {
            padding: var(--spacing-md);
            align-items: flex-start;
            padding-top: 10vh;
        }

        .error-container {
            padding: var(--spacing-xl);
        }

        .error-icon {
            font-size: 4rem;
        }

        .error-title {
            font-size: var(--font-size-xl);
        }

        .error-actions {
            width: 100%;
        }

        .error-btn {
            width: 100%;
        }

        .suggestions-list {
            flex-direction: column;
            align-items: center;
        }
    }

    @media (prefers-color-scheme: dark) {
        .error-container {
            box-shadow: var(--shadow-lg), 0 0 0 1px rgba(255, 255, 255, 0.05);
        }
    }

    /* Add a subtle animation for the entire container */
    .error-container {
        animation: slideIn 0.6s ease-out;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="error-wrapper">
    <div class="error-container">
        <div class="error-icon">üîç</div>
        <h1 class="error-title">Page Not Found</h1>
        <div class="error-code">Error 404</div>
        <p class="error-message">
            {{ error or "The page you're looking for seems to have wandered off. Let's get you back on track!" }}
        </p>

        <div class="error-actions">
            <a href="/" class="error-btn">
                üè† Go to Homepage
            </a>
            <a href="javascript:history.back()" class="error-btn secondary">
                ‚Ü©Ô∏è Go Back
            </a>
        </div>

        <div class="error-suggestions">
            <div class="suggestions-title">Try these instead:</div>
            <div class="suggestions-list">
                <a href="/" class="suggestion-link">Home</a>
                <a href="/login" class="suggestion-link">Login</a>
                <a href="/ingredients" class="suggestion-link">Ingredients</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}