{% extends "base.html.jinja" %}

{% block page_title %}Page Not Found | Zestify{% endblock %}

{% block extra_styles %}
<style>
    .error-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: var(--spacing-lg);
    }

    .error-container {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        padding: var(--spacing-xxl);
        width: 100%;
        max-width: 36rem;
        text-align: center;
    }

    .error-title {
        color: var(--text-primary);
        font-size: var(--font-size-xxl);
        font-weight: 700;
        margin-bottom: var(--spacing-sm);
    }

    .error-code {
        color: var(--danger);
        font-size: var(--font-size-lg);
        font-weight: 600;
        margin-bottom: var(--spacing-lg);
    }

    .error-message {
        color: var(--text-secondary);
        font-size: var(--font-size-base);
        line-height: 1.6;
        margin-bottom: var(--spacing-xl);
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .error-actions {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
        align-items: center;
    }

    .error-btn {
        background: var(--accent-blue);
        color: var(--text-primary);
        text-decoration: none;
        border-radius: var(--border-radius-sm);
        padding: var(--spacing-md) var(--spacing-lg);
        font-size: var(--font-size-md);
        font-weight: 600;
        min-width: 180px;
        text-align: center;
    }

    .error-btn:hover {
        background: var(--accent-blue-hover);
        text-decoration: none;
    }

    .error-btn.secondary {
        background: var(--surface-bg);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }

    .error-btn.secondary:hover {
        background: var(--elevated-bg);
        color: var(--text-primary);
        border-color: var(--accent-blue);
    }

    .error-suggestions {
        margin-top: var(--spacing-xl);
        padding-top: var(--spacing-lg);
        border-top: 1px solid var(--border-color);
    }

    .suggestions-title {
        color: var(--text-primary);
        font-size: var(--font-size-sm);
        font-weight: 600;
        margin-bottom: var(--spacing-md);
    }

    .suggestions-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-sm);
        justify-content: center;
    }

    .suggestion-link {
        color: var(--accent-blue);
        text-decoration: none;
        font-size: var(--font-size-sm);
        padding: var(--spacing-xs) var(--spacing-sm);
        border-radius: var(--border-radius-sm);
        border: 1px solid transparent;
    }

    .suggestion-link:hover {
        background: var(--accent-blue);
        color: var(--text-primary);
        border-color: var(--accent-blue);
    }

    @media (max-width: 768px) {
        .error-wrapper {
            padding: var(--spacing-md);
            align-items: flex-start;
            padding-top: 10vh;
        }

        .error-container {
            padding: var(--spacing-xl);
        }

        .error-title {
            font-size: var(--font-size-xl);
        }

        .error-actions {
            width: 100%;
        }

        .error-btn {
            width: 100%;
        }

        .suggestions-list {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="error-wrapper">
    <div class="error-container">
        <h1 class="error-title">Page Not Found</h1>
        <div class="error-code">Error 404</div>
        <p class="error-message">
            {{ error or "The page you're looking for seems to have wandered off. Let's get you back on track!" }}
        </p>

        <div class="error-actions">
            <a href="/" class="error-btn">Go to Homepage</a>
            <a href="javascript:history.back()" class="error-btn secondary">Go Back</a>
        </div>

        <div class="error-suggestions">
            <div class="suggestions-title">Try these instead:</div>
            <div class="suggestions-list">
                <a href="/" class="suggestion-link">Home</a>
                <a href="/login" class="suggestion-link">Login</a>
                <a href="/ingredients" class="suggestion-link">Ingredients</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}