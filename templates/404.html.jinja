{% extends "base.html.jinja" %}

{% block page_title %}Page Not Found | Zestify{% endblock %}

{% block extra_styles %}
<link rel="stylesheet" href="{{ url_for('static', path='css/404.css') }}">
{% endblock %}

{% block content %}
<div class="error-wrapper">
    <div class="error-container">
        <h1 class="error-title">Page Not Found</h1>
        <div class="error-code">Error 404</div>
        <p class="error-message">
            {{ error or "The page you're looking for seems to have wandered off. Let's get you back on track!" }}
        </p>

        <div class="error-actions">
            <a href="/" class="error-btn">Go to Homepage</a>
            <a href="javascript:history.back()" class="error-btn secondary">Go Back</a>
        </div>

        <div class="error-suggestions">
            <div class="suggestions-title">Try these instead:</div>
            <div class="suggestions-list">
                <a href="/" class="suggestion-link">Home</a>
                <a href="/login" class="suggestion-link">Login</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}